<br/>
<h2>{{pageTitle}}</h2>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <form action="/movie" method="post" class="row">
	    <div class="col-md-9">
			<div class="form-group">
				<input type="text" class="form-control input-lg" id="title" name="title" value="" placeholder="" onkeyup="javascript:loadMovies(this);"/>
				<input type="hidden" id="movieid" name="movieid" value=""/>			
			</div>
		</div>	
	    <div class="col-md-3">
			<div class="form-group">
				<button id="add" class="btn btn-lg btn-default btn-block">Add Movie</button>
			</div>
		</div>	
  	  </form>
  </div>
</div>

<hr size="1"/>

{{#each movies}}
   <div class="row movie">
	  <div class="col-md-8 col-md-offset-2">
	     <div class="col-md-3">
		     <img src="https://image.tmdb.org/t/p/w185/{{poster_path}}" class="img-rounded img-responsive"/>
         </div>
		 <div class="col-md-9">
		     <h4>
			   <b>{{title}}</b>
			</h4>
			<h5>
			   Rating: {{vote_average}}    Votes: ({{vote_count}})
			</h5>
			 
			 <p class="overview well">{{overview}}</p>
			 
			 <a class="watched" data-id="{{id}}" onclick="javascript:watchMovie({{id}});">
			    <i class="fa fa-square-o"></i> Watched
			 </a>
			 
			 <p><strong>Release:</strong> {{release_date}}</p>
		 </div>
      </div>
   </div>
   <hr size="2"/>
{{/each}}